<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" >

    <EditText
            android:id="@+id/edt_nota1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="@string/Edt_nota1"
            android:padding="20dp"
            android:background="@color/LightBlue"
            android:inputType="number"
            android:maxLength="2"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp" />

    <EditText
            android:id="@+id/edt_nota2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="@string/edt_nota2"
            android:padding="20dp"
            android:background="@color/LightBlue"
            android:inputType="number"
            android:maxLength="2"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:layout_marginRight="50dp" />

    <EditText
            android:id="@+id/edt_nota3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="@string/edt_nota3"
            android:padding="20dp"
            android:background="@color/LightBlue"
            android:inputType="number"
            android:maxLength="2"
            android:gravity="center"
            android:layout_below="@id/edt_nota1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp" />

    <EditText
            android:id="@+id/edt_nota4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="Nota 4"
            android:padding="20dp"
            android:background="@color/LightBlue"
            android:inputType="number"
            android:maxLength="2"
            android:gravity="center"
            android:layout_below="@id/edt_nota2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp" />

    <EditText
            android:id="@+id/edt_faltas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="NÃºmero de Faltas"
            android:padding="20dp"
            android:background="@color/LightBlue"
            android:inputType="number"
            android:maxLength="2"
            android:gravity="center"
            android:layout_below="@id/edt_nota3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"  />

    <Button
            android:id="@+id/btn_calcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_faltas"
            android:text="@string/btn_calcular"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:padding="20dp"
            android:backgroundTint="@color/DeepSkyBlue"
            android:layout_margin="30dp"/>

    <TextView
            android:id="@+id/txt_resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/btn_calcular"
            android:gravity="center"/>

    <ImageButton
            android:id="@+id/imgbtn_sair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_cancel_24"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/white" />


</RelativeLayout>